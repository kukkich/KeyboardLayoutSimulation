<Window x:Class="OSProject.ButtonValueChangingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSProject"
        mc:Ignorable="d"
        Title="ButtonValueChangingWindow" Height="140" Width="180">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0"
                TextAlignment="Center" VerticalAlignment="Center" FontSize="20"
                  Text="{Binding Path=NewValue}"
                 x:Name="textField"
                 KeyDown="TextBox_KeyDown" TextChanged="TextField_TextChanged"></TextBox>
        <Button Grid.Row="1" Click="ChangeButton_Click">Изменить</Button>

    </Grid>
</Window>
